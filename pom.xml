<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>4.5.4</version>
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <artifactId>xwiki-macro-hierarchy</artifactId>
  <name>Hierarchy Macro</name>
  <version>1.3</version>
  <packaging>xar</packaging>
  <description>Displays and allows to manipulate the documents hierarchy in a space / on the wiki.</description>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/macro-hierarchy.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/macro-hierarchy.git</developerConnection>
    <url>https://github.com/xwiki-contrib/macro-hierarchy.git</url>
    <tag>xwiki-macro-hierarchy-1.3</tag>
  </scm>
  <developers>
    <developer>
      <id>lucaa</id>
      <name>Anca Luca</name>
      <organization>XWiki SAS</organization>
    </developer>
    <developer>
      <id>pcojan</id>
      <name>Paul Cojan</name>
      <organization>XWiki SAS</organization>
    </developer>
    <developer>
      <id>mstaicu</id>
      <name>Mircea Staicu</name>
      <organization>XWiki SAS</organization>
    </developer>
  </developers>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <!-- Try releasing with release plugin 2.5 so that we can actually release with git 1.9 
               (seems there are a log of bugs, especially http://jira.codehaus.org/browse/MRELEASE-812 ) -->
          <version>2.5</version>
        </plugin>
      </plugins> 
    </pluginManagement>  
    <extensions>
      <extension>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-handlers</artifactId>
        <version>${project.parent.version}</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <version>${project.parent.version}</version>
      </plugin>
    </plugins>
  </build>
</project>
